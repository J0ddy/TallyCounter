<resources>
    <style name="mainTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#1c1c1c</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tally">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">64dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="greenButton" parent="button">
        <item name="android:background">@drawable/green_button_background</item>
    </style>

    <style name="redButton" parent="button">
        <item name="android:background">@drawable/red_button_background</item>
    </style>
</resources>